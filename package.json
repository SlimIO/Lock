{
    "name": "@slimio/lock",
    "version": "1.0.0",
    "description": "SlimIO Asynchronous Lock Handler",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "prepublishOnly": "pkg-ok",
        "test": "cross-env psp && nyc --reporter=lcov ava --verbose",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "codecov",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/Lock.git"
    },
    "keywords": [
        "lock",
        "mutex",
        "asynchronous"
    ],
    "files": [
        "index.js",
        "index.d.ts"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/Lock/issues"
    },
    "homepage": "https://github.com/SlimIO/Lock#readme",
    "devDependencies": {
        "@commitlint/cli": "^17.0.0",
        "@commitlint/config-conventional": "^17.0.0",
        "@escommunity/minami": "^1.0.0",
        "@nodesecure/eslint-config": "^1.4.0",
        "@slimio/eslint-config": "^5.0.0",
        "@slimio/is": "^1.5.1",
        "@slimio/psp": "^0.12.3",
        "ava": "^4.2.0",
        "codecov": "^3.7.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.15.0",
        "husky": "^4.3.8",
        "jsdoc": "^3.6.10",
        "nyc": "^15.1.0",
        "pkg-ok": "^3.0.0"
    },
    "engines": {
        "node": ">=12"
    },
    "husky": {
        "hooks": {
            "pre-push": "cross-env eslint index.js && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "check-coverage": true,
        "per-file": false,
        "lines": 95,
        "statements": 95,
        "functions": 98,
        "branches": 90
    }
}
